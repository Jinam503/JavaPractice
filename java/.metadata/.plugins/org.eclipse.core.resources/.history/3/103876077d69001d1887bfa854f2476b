package pack;
import java.util.Scanner;
import character.Player;
public class Test {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int[][] board = new int[10][10];
		int turn = 0;
		int a,b;
		for(int i = 0; i< 10; i++) {
			for(int j = 0; j< 10; j++) {
				System.out.print(board[i][j]+" ");
			}
			System.out.println("");
		}
		while(true) {
			if(turn == 0) {
				
				System.out.println("x좌표를 입력하세요.");
				a = in.nextInt();
				System.out.println("y좌표를 입력하세요.");
				b = in.nextInt();
				board[a][b] = 1;
				for(int i = 0; i< 10; i++) {
					for(int j = 0; j< 10; j++) {
						System.out.print(board[i][j]+" ");
					}
					System.out.println("");
				}
			}
			else {
				break;
			}
		}
		in.close();
		
	}
}
