package game;

public class draw {
	private int[][] board;
	public void insert(int a, int b, boolean c) {
		if(c) board[a-1][b-1] = 2;
		else board[a-1][b-1] = 1;
		
	}
	public void DrawMap() {
		for(int i = 0; i< 10; i++) {
			for(int j = 0; j< 10; j++) {
				if(board[i][j] == 0) {
					System.out.print("·"+" ");
				}
				else if(board[i][j] == 1) {
					System.out.print("○"+" ");
				}
				else {
					System.out.print("●"+" ");
				}
			}
			System.out.println("");
		}
	}
}
